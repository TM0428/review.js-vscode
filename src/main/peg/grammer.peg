start
    = _ chapters? _
    ;

chapters
    = chapter chapters?

chapter
    = headline text:paragraphs?
    ;

// = 章タイトル
headline
    // TODO caption は inline element
    = level:"="+ bracketArg? braceArg? space* caption:contentInline
    ;

bracketArg
    = "[" arg:$([^\n\]]*) "]"
    ;

braceArg
    = "{" arg:$([^\n\}]*) "}"
    ;

paragraphs
    = !"=" paragraph paragraphs?
    ;

paragraph
    = contents newline?
    ;

contents
    = content contents?
    ;

content
    = ( blockElement / inlineElement / content:$(!"//" [^\r\n@]*) )
    ;

contentInline
    = contentInline_sub* newline
    ;

contentInline_sub
    = content:$([^\r\n@]+)
    / inlineElement
    ;

blockElement
    = "//" name:az bracketArg* "{" /* TODO */ "//}"
    ;

inlineElement
    = "@<" name:$([^>\r\n]+) ">" "{" contentInline_sub* "}"
    ;

// * 箇条書き
ulist
    // 行頭から… の指定がない
    = ulistElement (singlelineComment / ulistElement)*
    ;

ulistElement
    = " "+ level:"*"+ text:contentInline
    ;

// 1. 番号付き箇条書き
olist
    // 行頭から… の指定がない
    = olistElement (singlelineComment / olistElement)*
    ;

olistElement
    = " "+ digit "." text:contentInline
    ;

// : 用語リスト
dlist
    // 行頭から… の指定がない
    = dlistElement (singlelineComment / dlistElement)*
    ;

dlistElement
    = " "* ":" " " text:contentInline
    ;

lineRestString
    = [^\n]* "\n"?
    ;

content
    = text:((!(newline "=") .) / singlelineComment)*
    ;

singlelineComment
    = "#@" [^\r\n]* newline
    ;

digit
    = [0-9]+
    ;

az
    = [a-z]+
    ;

newline
    = "\r\n"
    / "\n"
    ;

_
    = space*
    ;

space
    = [ \t\r\n]
    ;
