start
    = chapter*
    ;

chapter "chapter"
    = caption text:[^=]*
    ;

caption "caption"
    = level:"="+ "{" label:[^\n}]+ "}" spacing text:[^\n]+
    / level:"="+ spacing text:[^\n]+
    ;

spacing
    = (space / singlelineComment)*
    ;

singlelineComment
    = "#@#" ( !"\n" !"\r" .)* ("\r" / "\r\n" / "\n")
    ;

space
    = [ \t\r\n]
    ;
